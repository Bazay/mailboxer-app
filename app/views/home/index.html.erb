<h1><%= @conversation.subject %></h1>

<% @conversation.messages.each do |message| %>
  <div class="message-item" style="padding:10px;margin:10px;background-color:<%= message.sender_id == current_user.id ? '#85BFEA' : 'lightgray' %>;margin-<%= message.sender_id == current_user.id ? 'left' : 'right' %>: 20%;">
    <p><strong><%= message.sender.username %></strong></p>
    <p><%= message.body %></p>
  </div>
<% end %>

<hr>
<%= form_tag conversations_create_message_path do %>
  <%= hidden_field_tag :sender_id, current_user.id %>
  <%= hidden_field_tag :conversation_id, @conversation.id %>
  <div class="field">
    <%= text_area_tag :body %>
  </div>
  <%= submit_tag 'Send' %>
<% end %>
